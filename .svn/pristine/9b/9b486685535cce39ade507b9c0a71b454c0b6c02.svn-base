<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25242a" >
    
    
	<EditText 
	    android:id="@+id/_emailid"
	    android:hint="@string/email_hint"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:padding="10dp"
	    android:background="@android:color/white"
	    android:singleLine="true"/>
    
    <EditText 
	    android:id="@+id/_country_code"
	    android:hint="@string/country_code_hint"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:padding="10dp"
	    android:layout_below="@id/_emailid"
	    android:background="@android:color/white"
	    android:singleLine="true"
	    android:maxWidth="80dp"
	    android:inputType="phone"/>
    
    <EditText 
	    android:id="@+id/_phone_no"
	    android:hint="@string/phone_no_hint"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="phone"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:padding="10dp"
	    android:layout_below="@id/_emailid"
	    android:layout_toRightOf="@id/_country_code"
	    android:background="@android:color/white"
	    android:singleLine="true"/>
    
    <EditText 
	    android:id="@+id/_password"
	    android:hint="@string/password_hint"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:inputType="textPassword"
	    android:padding="10dp"
	    android:layout_below="@id/_country_code"
	    android:background="@android:color/white"
	    android:singleLine="true"/>
    
    <EditText 
	    android:id="@+id/_confrim_password"
	    android:hint="@string/confirm_password_hint"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:inputType="textPassword"
	    android:padding="10dp"
	    android:layout_below="@id/_password"
	    android:background="@android:color/white"
	    android:singleLine="true"/>
    
    <LinearLayout 
     android:id="@+id/rememberme_layout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"  
     android:background="@android:color/white" 
     android:layout_below="@id/_confrim_password" 
     android:orientation="horizontal"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_marginTop="10dp"
     android:layout_marginBottom="10dp">
      
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rememberme_hint"
            android:padding="10dp"
            android:textSize="17sp"/>
                
      <Switch
        android:id="@+id/_rememberme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
	    android:gravity="center"/>
        
        
    </LinearLayout>
      
       
	
     <Button
        android:id="@+id/_create_account_bt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:layout_below="@id/rememberme_layout"
	    android:text="@string/create_account_str"
	    android:background="#e95b5c"
	    android:layout_centerInParent="true"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp" />
     
</RelativeLayout>
