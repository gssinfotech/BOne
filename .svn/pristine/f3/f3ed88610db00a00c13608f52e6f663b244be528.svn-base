<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >
    
    <TextView 
        android:id="@+id/wlan_network_label_one_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wlan_network_instruction_one_string"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textSize="17sp"/>
    
    <TextView 
        android:id="@+id/wlan_network_label_two_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wlan_network_instruction_two_string"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/wlan_network_label_one_id"/>
    
    <TextView 
        android:id="@+id/wlan_network_label_three_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wlan_network_instruction_three_string"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/wlan_network_label_two_id"/>
    
    <Button 
        android:id="@+id/wlan_network_done_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wlan_network_done_btn_string"
        android:onClick="onDoneButtonClicked"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>
    

</RelativeLayout>
