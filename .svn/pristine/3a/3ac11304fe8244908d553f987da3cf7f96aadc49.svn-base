<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background" >
    
    <TextView 
	    android:id="@+id/videocam_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/video_cam_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"/>
    
    <ImageButton
         android:id="@+id/videocam_homebtn"
         android:layout_width="30dp"
         android:layout_height="wrap_content"
         android:background="@drawable/home"
         android:onClick="onHomeButtonClicked"
         android:layout_alignBottom="@+id/videocam_heading"
 	    android:layout_alignRight="@+id/videocam_heading"
 	    android:layout_alignEnd="@+id/videocam_heading"
 	    android:layout_alignTop="@+id/videocam_heading"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
    
     <Button 
        android:id="@+id/videocam_dropcam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="@string/video_cam_dropcam"
        android:onClick="onDropcamButtonClicked"
        android:textColor="@android:color/white"
        android:background="@color/btn_background"
        android:layout_margin="20dp"
        android:gravity="start|center_vertical"
        android:layout_below="@+id/videocam_heading"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"/>
    
    <ImageView
	 	    android:id="@+id/videocam_dropcam_arrow_id"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_alignBottom="@+id/videocam_dropcam"
	 	    android:layout_alignRight="@+id/videocam_dropcam"
	 	    android:layout_alignEnd="@+id/videocam_dropcam"
	 	    android:layout_alignTop="@+id/videocam_dropcam"
	 	    android:src="@drawable/button_right"
	 	    android:layout_marginRight="5dp"
	 	    android:layout_marginEnd="5dp"
	 	    android:contentDescription="@string/app_name"/>
    <ImageView
	 	    android:id="@+id/videocam_dropcam_icon"
	 	    android:layout_width="40dp"
	 	    android:layout_height="wrap_content"
	 	    android:layout_alignBottom="@+id/videocam_dropcam"
	 	    android:layout_alignLeft="@+id/videocam_dropcam"
	 	    android:layout_alignStart="@+id/videocam_dropcam"
	 	    android:layout_alignTop="@+id/videocam_dropcam"
	 	    android:src="@drawable/video_camera"
	 	    android:contentDescription="@string/app_name"
	 	    android:padding="5dp"/>
     
</RelativeLayout>
