<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
	        android:id="@+id/main_home_img_btn_id"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:contentDescription="@string/app_name"
	        android:layout_margin="10dp"
	        android:background="@drawable/drawable_appicon"
	        android:onClick="onBOneIconClicked"
	        android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
         <ImageButton
	        android:id="@+id/main_home_security_btn_id"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:contentDescription="@string/app_name"
	        android:background="@drawable/drawable_appicon"
	        android:onClick="onSecurityButtonClicked"/>
          <ImageButton
	        android:id="@+id/main_home_remote_btn_id"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:contentDescription="@string/app_name"
	        android:background="@drawable/drawable_appicon"
	        android:onClick="onRemoteButtonClicked"/>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
         <ImageButton
	        android:id="@+id/main_home_music_btn_id"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:contentDescription="@string/app_name"
	        android:background="@drawable/drawable_appicon"
	        android:onClick="onMusicButtonClicked"/>
          <ImageButton
	        android:id="@+id/main_home_devices_btn_id"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:contentDescription="@string/app_name"
	        android:background="@drawable/drawable_appicon"
	        android:onClick="onDevicesButtonClicked"/>

    </LinearLayout>
    
</LinearLayout>
