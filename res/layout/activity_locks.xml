<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background" >
    
    <TextView 
	    android:id="@+id/locks_heading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:padding="5dp"
	    android:text="@string/locks_title"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:textSize="17sp"/>
    
    <ImageButton
         android:id="@+id/locks_homebtn"
         android:layout_width="30dp"
         android:layout_height="wrap_content"
         android:background="@drawable/home"
         android:onClick="onHomeButtonClicked"
         android:layout_alignBottom="@+id/locks_heading"
 	    android:layout_alignRight="@+id/locks_heading"
 	    android:layout_alignEnd="@+id/locks_heading"
 	    android:layout_alignTop="@+id/locks_heading"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
    
     <Button 
        android:id="@+id/locks_yalelock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="@string/locks_yale_lock"
        android:onClick="onYaleLockButtonClicked"
        android:textColor="@android:color/white"
        android:background="@color/btn_background"
        android:layout_margin="20dp"
        android:gravity="start|center_vertical"
        android:layout_below="@+id/locks_heading"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"/>
    
    <ImageView
	 	    android:id="@+id/locks_arrow_id"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_alignBottom="@+id/locks_yalelock"
	 	    android:layout_alignRight="@+id/locks_yalelock"
	 	    android:layout_alignEnd="@+id/locks_yalelock"
	 	    android:layout_alignTop="@+id/locks_yalelock"
	 	    android:src="@drawable/button_right"
	 	    android:layout_marginRight="5dp"
	 	    android:layout_marginEnd="5dp"
	 	    android:contentDescription="@string/app_name"/>
    <ImageView
	 	    android:id="@+id/locks_yale_icon"
	 	    android:layout_width="40dp"
	 	    android:layout_height="wrap_content"
	 	    android:layout_alignBottom="@+id/locks_yalelock"
	 	    android:layout_alignLeft="@+id/locks_yalelock"
	 	    android:layout_alignStart="@+id/locks_yalelock"
	 	    android:layout_alignTop="@+id/locks_yalelock"
	 	    android:src="@drawable/yale_lock_icon"
	 	    android:contentDescription="@string/app_name"
	 	    android:padding="5dp"/>
     
</RelativeLayout>
